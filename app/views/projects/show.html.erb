<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>
      <i class="fas fa-project-diagram me-2"></i>
      <%= @project.name %>
      <% if @project.active? %>
        <span class="badge bg-success ms-2">Attivo</span>
      <% else %>
        <span class="badge bg-secondary ms-2">Inattivo</span>
      <% end %>
    </h1>
    <div>
      <%= link_to edit_project_path(@project), class: "btn btn-primary" do %>
        <i class="fas fa-edit me-1"></i>Modifica
      <% end %>
      <%= link_to projects_path, class: "btn btn-secondary ms-2" do %>
        <i class="fas fa-arrow-left me-1"></i>Torna ai Progetti
      <% end %>
    </div>
  </div>

  <div class="row">
    <!-- Informazioni Progetto -->
    <div class="col-md-4">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-info-circle me-1"></i>Informazioni Progetto</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong><i class="fas fa-tag me-1"></i>Nome:</strong><br>
            <span class="fs-5"><%= @project.name %></span>
          </div>
          
          <div class="mb-3">
            <strong><i class="fas fa-euro-sign me-1"></i>Budget:</strong><br>
            <span class="fs-5 text-primary">€ <%= number_with_precision(@project.budget, precision: 2) %></span>
          </div>
          
          <div class="mb-3">
            <strong><i class="fas fa-toggle-on me-1"></i>Stato:</strong><br>
            <% if @project.active? %>
              <span class="badge bg-success fs-6">
                <i class="fas fa-check me-1"></i>Attivo
              </span>
            <% else %>
              <span class="badge bg-secondary fs-6">
                <i class="fas fa-times me-1"></i>Inattivo
              </span>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Statistiche Budget -->
    <div class="col-md-4">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-chart-pie me-1"></i>Statistiche Budget</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Spese Totali:</strong><br>
            <span class="fs-5 <%= @project.over_budget? ? 'text-danger' : 'text-success' %>">
              € <%= number_with_precision(@project.total_expenses, precision: 2) %>
            </span>
          </div>
          
          <div class="mb-3">
            <strong>Budget Rimanente:</strong><br>
            <span class="fs-5 <%= @project.remaining_budget < 0 ? 'text-danger' : 'text-success' %>">
              € <%= number_with_precision(@project.remaining_budget, precision: 2) %>
            </span>
          </div>
          
          <div class="mb-3">
            <strong>Percentuale Utilizzata:</strong><br>
            <div class="progress mb-2" style="height: 25px;">
              <div class="progress-bar <%= @project.over_budget? ? 'bg-danger' : 'bg-success' %>" 
                   role="progressbar" 
                   style="width: <%= [@project.budget_percentage_used, 100].min %>%"
                   aria-valuenow="<%= @project.budget_percentage_used %>" 
                   aria-valuemin="0" 
                   aria-valuemax="100">
                <%= @project.budget_percentage_used %>%
              </div>
            </div>
            <% if @project.over_budget? %>
              <small class="text-danger">
                <i class="fas fa-exclamation-triangle me-1"></i>
                Budget superato!
              </small>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Riepilogo Spese -->
    <div class="col-md-4">
      <div class="card shadow-sm mb-4">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-receipt me-1"></i>Riepilogo Spese</h5>
        </div>
        <div class="card-body">
          <div class="mb-3">
            <strong>Numero totale di spese:</strong><br>
            <span class="fs-5 text-info"><%= @project.expenses.count %></span>
          </div>
          
          <div class="mb-3">
            <strong>Spese approvate:</strong><br>
            <span class="fs-5 text-success"><%= @project.expenses.status_approved.count %></span>
          </div>
          
          <div class="mb-3">
            <strong>Spese in attesa:</strong><br>
            <span class="fs-5 text-warning"><%= @project.expenses.status_created.count %></span>
          </div>
          
          <div class="mb-3">
            <strong>Spese negate:</strong><br>
            <span class="fs-5 text-danger"><%= @project.expenses.status_denied.count %></span>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Lista Spese del Progetto -->
  <div class="row">
    <div class="col-12">
      <div class="card shadow-sm">
        <div class="card-header">
          <h5 class="mb-0"><i class="fas fa-list me-1"></i>Spese del Progetto</h5>
        </div>
        <div class="card-body">
          <% if @project.expenses.any? %>
            <div class="table-responsive">
              <table class="table table-hover">
                <thead class="table-light">
                  <tr>
                    <th>Data</th>
                    <th>Descrizione</th>
                    <th>Importo</th>
                    <th>Tipo</th>
                    <th>Stato</th>
                    <th>Rimborso</th>
                  </tr>
                </thead>
                <tbody>
                  <% @project.expenses.order(date: :desc).each do |expense| %>
                    <tr>
                      <td><%= expense.date.strftime("%d/%m/%Y") %></td>
                      <td><%= expense.purpose %></td>
                      <td class="text-end">
                        <strong>€ <%= number_with_precision(expense.amount, precision: 2) %></strong>
                      </td>
                      <td>
                        <% if expense.car? %>
                          <span class="badge bg-info">Auto</span>
                        <% else %>
                          <span class="badge bg-secondary">Normale</span>
                        <% end %>
                      </td>
                      <td>
                        <% case expense.status %>
                        <% when 'created' %>
                          <span class="badge bg-warning">In attesa</span>
                        <% when 'approved' %>
                          <span class="badge bg-success">Approvata</span>
                        <% when 'denied' %>
                          <span class="badge bg-danger">Negata</span>
                        <% end %>
                      </td>
                      <td>
                        <%= link_to expense.reimboursement, class: "btn btn-sm btn-outline-primary" do %>
                          <i class="fas fa-external-link-alt me-1"></i>
                          Rimborso #<%= expense.reimboursement.id %>
                        <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          <% else %>
            <div class="text-center py-5">
              <i class="fas fa-receipt fa-3x text-muted mb-3"></i>
              <h5 class="text-muted">Nessuna spesa associata</h5>
              <p class="text-muted">Non ci sono ancora spese associate a questo progetto</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
