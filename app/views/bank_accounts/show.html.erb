<div class="container-fluid">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Dettagli Conto Bancario</h2>
  </div>

  <div class="card">
    <div class="card-body">
      <% if current_user.admin? %>
        <div class="form-group mb-4">
          <h5><strong>Proprietario:</strong></h5>
          <div class="d-flex align-items-center">
            <i class="fas fa-user me-2 text-primary"></i>
            <span class="fs-6">
              <%= @bank_account.user.name %> <%= @bank_account.user.surname %>
              <small class="text-muted">(<%= @bank_account.user.email %>)</small>
            </span>
          </div>
        </div>
        <hr>
      <% end %>

      <div class="form-group mb-3">
        <p><strong>IBAN:</strong></p>
        <div class="font-monospace">
          <%= @bank_account.iban %>
        </div>
      </div>
                <div class="form-group mb-3">
        <p><strong>Intestatario:</strong></p>
        <div>
          <%= @bank_account.owner %>
        </div>
      </div>
                <div class="form-group mb-3">
        <p><strong>Indirizzo:</strong></p>
        <div>
          <%= @bank_account.address %>
        </div>
      </div>
                <div class="form-group mb-3">
        <p><strong>CAP:</strong></p>
        <div>
          <%= @bank_account.cap %>
        </div>
      </div>
                <div class="form-group mb-3">
        <p><strong>Città:</strong></p>
        <div>
          <%= @bank_account.town %>
        </div>
      </div>
                <div class="form-group mb-3">
        <p><strong>Codice Fiscale:</strong></p>
        <div class="font-monospace">
          <%= @bank_account.fiscal_code %>
        </div>
      </div>
                <div class="form-group mb-3">
        <p><strong>Predefinito:</strong></p>
        <div>
          <% if @bank_account.default %>
            <span class="badge bg-success">Sì</span>
          <% else %>
            <span class="badge bg-secondary">No</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Modifica', edit_bank_account_path(@bank_account), class: "btn btn-primary" %>
    <%= link_to 'Torna alla Lista', bank_accounts_path, class: "btn btn-secondary" %>
  </div>
</div>
