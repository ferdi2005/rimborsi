<div class="container-fluid">
  <p id="notice"><%= notice %></p>
  <h1>Bank Accounts</h1>
  <table class="table">
    <thead>
      <tr>
                  <th>User</th>
                  <th>Iban</th>
                  <th>Owner</th>
                  <th>Address</th>
                  <th>Cap</th>
                  <th>Town</th>
                  <th>Fiscal code</th>
                  <th>Default</th>
                <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @bank_accounts.each do |bank_account| %>
      <tr>
                  <td><%= bank_account.user_id %></td>
                  <td><%= bank_account.iban %></td>
                  <td><%= bank_account.owner %></td>
                  <td><%= bank_account.address %></td>
                  <td><%= bank_account.cap %></td>
                  <td><%= bank_account.town %></td>
                  <td><%= bank_account.fiscal_code %></td>
                  <td><%= bank_account.default %></td>
                <td><%= link_to 'Show', bank_account %></td>
        <td><%= link_to 'Edit', edit_bank_account_path(bank_account) %></td>
        <td><%= link_to 'Destroy', bank_account, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br>
  <%= link_to 'New Bank Account', new_bank_account_path, class: "btn btn-primary" %>
</div>
