<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Conti Bancari</h1>
    <%= link_to 'Nuovo Conto Bancario', new_bank_account_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <% if current_user.admin? %>
            <th>Utente</th>
          <% end %>
          <th>IBAN</th>
          <th>Intestatario</th>
          <th>Indirizzo</th>
          <th>CAP</th>
          <th>Citt√†</th>
          <th>Codice Fiscale</th>
          <th>Predefinito</th>
          <th>Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @bank_accounts.each do |bank_account| %>
          <tr>
            <% if current_user.admin? %>
              <td>
                <%= bank_account.user&.name %> <%= bank_account.user&.surname %>
                <br><small class="text-muted"><%= bank_account.user&.email %></small>
              </td>
            <% end %>
            <td><%= bank_account.iban %></td>
            <td><%= bank_account.owner %></td>
            <td><%= bank_account.address %></td>
            <td><%= bank_account.cap %></td>
            <td><%= bank_account.town %></td>
            <td><%= bank_account.fiscal_code %></td>
            <td>
              <% if bank_account.default %>
                <span class="badge bg-success">Predefinito</span>
              <% else %>
                <span class="badge bg-secondary">No</span>
              <% end %>
            </td>
            <td>
              <%= link_to 'Visualizza', bank_account, class: "btn btn-sm btn-outline-primary" %>
              <%= link_to 'Modifica', edit_bank_account_path(bank_account), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to 'Elimina', bank_account, method: :delete, 
                          data: { confirm: 'Sei sicuro di voler eliminare questo conto bancario?' }, 
                          class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @bank_accounts.empty? %>
    <div class="alert alert-info text-center">
      <h5>Nessun conto bancario trovato</h5>
      <p>Inizia aggiungendo il tuo primo conto bancario.</p>
      <%= link_to 'Aggiungi Conto Bancario', new_bank_account_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
