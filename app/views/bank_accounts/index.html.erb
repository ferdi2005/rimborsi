<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="fas fa-university me-2"></i>Conti Bancari</h1>
    <%= link_to new_bank_account_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>Nuovo conto bancario
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <% if current_user.admin? %>
            <th><i class="fas fa-user me-2"></i>Utente</th>
          <% end %>
          <th><i class="fas fa-credit-card me-2"></i>IBAN</th>
          <th><i class="fas fa-id-card me-2"></i>Intestatario</th>
          <th><i class="fas fa-map-marker-alt me-2"></i>Indirizzo</th>
          <th><i class="fas fa-mail-bulk me-2"></i>CAP</th>
          <th><i class="fas fa-city me-2"></i>Citt√†</th>
          <th><i class="fas fa-id-badge me-2"></i>Codice Fiscale</th>
          <th><i class="fas fa-star me-2"></i>Predefinito</th>
          <th><i class="fas fa-cogs me-2"></i>Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @bank_accounts.each do |bank_account| %>
          <tr>
            <% if current_user.admin? %>
              <td>
                <%= bank_account.user&.name %> <%= bank_account.user&.surname %>
                <br><small class="text-muted"><%= bank_account.user&.email %></small>
              </td>
            <% end %>
            <td><%= bank_account.iban %></td>
            <td><%= bank_account.owner %></td>
            <td><%= bank_account.address %></td>
            <td><%= bank_account.cap %></td>
            <td><%= bank_account.town %></td>
            <td><%= bank_account.fiscal_code %></td>
            <td>
              <% if bank_account.default %>
                <span class="badge bg-success"><i class="fas fa-star me-1"></i>Predefinito</span>
              <% else %>
                <span class="badge bg-secondary">No</span>
              <% end %>
            </td>
            <td>
              <%= link_to bank_account, class: "btn btn-sm btn-outline-primary" do %>
                <i class="fas fa-eye me-1"></i>Visualizza
              <% end %>
              <%= link_to edit_bank_account_path(bank_account), class: "btn btn-sm btn-outline-secondary" do %>
                <i class="fas fa-edit me-1"></i>Modifica
              <% end %>
              <%= link_to bank_account, method: :delete, 
                          data: { confirm: 'Sei sicuro di voler eliminare questo conto bancario?' }, 
                          class: "btn btn-sm btn-outline-danger" do %>
                <i class="fas fa-trash me-1"></i>Elimina
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @bank_accounts.empty? %>
    <div class="alert alert-info text-center">
      <i class="fas fa-info-circle fa-2x mb-3"></i>
      <h5>Nessun conto bancario trovato</h5>
      <p>Inizia aggiungendo il tuo primo conto bancario.</p>
      <%= link_to new_bank_account_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-2"></i>Aggiungi conto bancario
      <% end %>
    </div>
  <% end %>
</div>
