<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="fas fa-car me-2"></i>I Miei Veicoli</h1>
    <%= link_to new_vehicle_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>Nuovo Veicolo
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <% if current_user.admin? %>
            <th><i class="fas fa-user me-2"></i>Utente</th>
          <% end %>
          <th><i class="fas fa-tag me-2"></i>Nome</th>
          <th><i class="fas fa-layer-group me-2"></i>Categoria</th>
          <th><i class="fas fa-car me-2"></i>Marca e Modello</th>
          <th><i class="fas fa-gas-pump me-2"></i>Carburante</th>
          <th><i class="fas fa-star me-2"></i>Predefinito</th>
          <th><i class="fas fa-cogs me-2"></i>Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @vehicles.each do |vehicle| %>
          <tr>
            <% if current_user.admin? %>
              <td>
                <%= vehicle.user&.name %> <%= vehicle.user&.surname %>
                <br><small class="text-muted"><%= vehicle.user&.email %></small>
              </td>
            <% end %>
            <td><%= vehicle.name %></td>
            <td><%= vehicle.category_label %></td>
            <td><%= vehicle.brand %> <%= vehicle.model %></td>
            <td><%= vehicle.fuel_label %></td>
            <td>
              <% if vehicle.default %>
                <span class="badge bg-success"><i class="fas fa-star me-1"></i>Predefinito</span>
              <% else %>
                <span class="badge bg-secondary">No</span>
              <% end %>
            </td>
            <td>
              <%= link_to vehicle, class: "btn btn-sm btn-outline-primary" do %>
                <i class="fas fa-eye me-1"></i>Visualizza
              <% end %>
              <%= link_to edit_vehicle_path(vehicle), class: "btn btn-sm btn-outline-secondary" do %>
                <i class="fas fa-edit me-1"></i>Modifica
              <% end %>
              <%= link_to vehicle, method: :delete, 
                          data: { confirm: 'Sei sicuro di voler eliminare questo veicolo?' }, 
                          class: "btn btn-sm btn-outline-danger" do %>
                <i class="fas fa-trash me-1"></i>Elimina
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @vehicles.empty? %>
    <div class="alert alert-info text-center">
      <i class="fas fa-car fa-2x mb-3"></i>
      <h5>Nessun veicolo trovato</h5>
      <p>Inizia aggiungendo il tuo primo veicolo per le spese auto.</p>
      <%= link_to new_vehicle_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-2"></i>Aggiungi Veicolo
      <% end %>
    </div>
  <% end %>
</div>
