<div class="container-fluid">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Dettagli Veicolo</h2>
  </div>

  <div class="card">
    <div class="card-body">
      <% if current_user.admin? %>
        <div class="form-group mb-4">
          <h5><strong>Proprietario:</strong></h5>
          <div class="d-flex align-items-center">
            <i class="fas fa-user me-2 text-primary"></i>
            <span class="fs-6">
              <%= @vehicle.user.name %> <%= @vehicle.user.surname %>
              <small class="text-muted">(<%= @vehicle.user.email %>)</small>
            </span>
          </div>
        </div>
        <hr>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="form-group mb-3">
            <p><strong>Nome:</strong></p>
            <div><%= @vehicle.name %></div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group mb-3">
            <p><strong>Categoria:</strong></p>
            <div><%= @vehicle.category_label %></div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group mb-3">
            <p><strong>Marca:</strong></p>
            <div><%= @vehicle.brand %></div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group mb-3">
            <p><strong>Modello:</strong></p>
            <div><%= @vehicle.model %></div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group mb-3">
            <p><strong>Tipo di carburante:</strong></p>
            <div><%= @vehicle.fuel_label %></div>
          </div>
        </div>
        
        <div class="col-md-6">
          <div class="form-group mb-3">
            <p><strong>Predefinito:</strong></p>
            <div>
              <% if @vehicle.default %>
                <span class="badge bg-success">SÃ¬</span>
              <% else %>
                <span class="badge bg-secondary">No</span>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Modifica', edit_vehicle_path(@vehicle), class: "btn btn-primary" %>
    <%= link_to 'Torna alla Lista', vehicles_path, class: "btn btn-secondary" %>
  </div>
</div>
