<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Account PayPal</h1>
    <%= link_to 'Nuovo Account PayPal', new_paypal_account_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <% if current_user.admin? %>
            <th>Utente</th>
          <% end %>
          <th>Email PayPal</th>
          <th>Predefinito</th>
          <th>Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @paypal_accounts.each do |paypal_account| %>
          <tr>
            <% if current_user.admin? %>
              <td>
                <%= paypal_account.user&.name %> <%= paypal_account.user&.surname %>
                <br><small class="text-muted"><%= paypal_account.user&.email %></small>
              </td>
            <% end %>
            <td><%= paypal_account.email %></td>
            <td>
              <% if paypal_account.default %>
                <span class="badge bg-success">Predefinito</span>
              <% else %>
                <span class="badge bg-secondary">No</span>
              <% end %>
            </td>
            <td>
              <%= link_to 'Visualizza', paypal_account, class: "btn btn-sm btn-outline-primary" %>
              <%= link_to 'Modifica', edit_paypal_account_path(paypal_account), class: "btn btn-sm btn-outline-secondary" %>
              <%= link_to 'Elimina', paypal_account, method: :delete, 
                          data: { confirm: 'Sei sicuro di voler eliminare questo account PayPal?' }, 
                          class: "btn btn-sm btn-outline-danger" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @paypal_accounts.empty? %>
    <div class="alert alert-info text-center">
      <h5>Nessun account PayPal trovato</h5>
      <p>Inizia aggiungendo il tuo primo account PayPal.</p>
      <%= link_to 'Aggiungi Account PayPal', new_paypal_account_path, class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
