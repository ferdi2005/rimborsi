<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><i class="fab fa-paypal me-2"></i>Account PayPal</h1>
    <%= link_to new_paypal_account_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus me-2"></i>Nuovo Account PayPal
    <% end %>
  </div>

  <div class="table-responsive">
    <table class="table table-striped">
      <thead class="table-dark">
        <tr>
          <% if current_user.admin? %>
            <th><i class="fas fa-user me-2"></i>Utente</th>
          <% end %>
          <th><i class="fas fa-envelope me-2"></i>Email PayPal</th>
          <th><i class="fas fa-star me-2"></i>Predefinito</th>
          <th><i class="fas fa-cogs me-2"></i>Azioni</th>
        </tr>
      </thead>
      <tbody>
        <% @paypal_accounts.each do |paypal_account| %>
          <tr>
            <% if current_user.admin? %>
              <td>
                <%= paypal_account.user&.name %> <%= paypal_account.user&.surname %>
                <br><small class="text-muted"><%= paypal_account.user&.email %></small>
              </td>
            <% end %>
            <td><%= paypal_account.email %></td>
            <td>
              <% if paypal_account.default %>
                <span class="badge bg-success"><i class="fas fa-star me-1"></i>Predefinito</span>
              <% else %>
                <span class="badge bg-secondary">No</span>
              <% end %>
            </td>
            <td>
              <%= link_to paypal_account, class: "btn btn-sm btn-outline-primary" do %>
                <i class="fas fa-eye me-1"></i>Visualizza
              <% end %>
              <%= link_to edit_paypal_account_path(paypal_account), class: "btn btn-sm btn-outline-secondary" do %>
                <i class="fas fa-edit me-1"></i>Modifica
              <% end %>
              <%= link_to paypal_account, method: :delete, 
                          data: { confirm: 'Sei sicuro di voler eliminare questo account PayPal?' }, 
                          class: "btn btn-sm btn-outline-danger" do %>
                <i class="fas fa-trash me-1"></i>Elimina
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  
  <% if @paypal_accounts.empty? %>
    <div class="alert alert-info text-center">
      <i class="fab fa-paypal fa-2x mb-3"></i>
      <h5>Nessun account PayPal trovato</h5>
      <p>Inizia aggiungendo il tuo primo account PayPal.</p>
      <%= link_to new_paypal_account_path, class: "btn btn-primary" do %>
        <i class="fas fa-plus me-2"></i>Aggiungi Account PayPal
      <% end %>
    </div>
  <% end %>
</div>
