<div class="container-fluid">
  <% if notice %>
    <div class="alert alert-success alert-dismissible fade show" role="alert">
      <%= notice %>
      <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
  <% end %>

  <div class="d-flex justify-content-between align-items-center mb-4">
    <h2>Dettagli Account PayPal</h2>
  </div>

  <div class="card">
    <div class="card-body">
      <% if current_user.admin? %>
        <div class="form-group mb-4">
          <h5><strong>Proprietario:</strong></h5>
          <div class="d-flex align-items-center">
            <i class="fas fa-user me-2 text-primary"></i>
            <span class="fs-6">
              <%= @paypal_account.user.name %> <%= @paypal_account.user.surname %>
              <small class="text-muted">(<%= @paypal_account.user.email %>)</small>
            </span>
          </div>
        </div>
        <hr>
      <% end %>

      <div class="form-group mb-3">
        <p><strong>Email PayPal:</strong></p>
        <div>
          <%= @paypal_account.email %>
        </div>
      </div>
                <div class="form-group mb-3">
        <p><strong>Predefinito:</strong></p>
        <div>
          <% if @paypal_account.default %>
            <span class="badge bg-success">SÃ¬</span>
          <% else %>
            <span class="badge bg-secondary">No</span>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= link_to 'Modifica', edit_paypal_account_path(@paypal_account), class: "btn btn-primary" %>
    <%= link_to 'Torna alla Lista', paypal_accounts_path, class: "btn btn-secondary" %>
  </div>
</div>
