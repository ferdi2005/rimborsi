<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center py-3" style="background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);">
          <div>
            <h2 class="mb-1">
              <%= primary_icon("file-invoice-dollar", class: "me-2") %>
              Rimborso #<%= @reimboursement.id %>
            </h2>
            <small class="text-muted">
              <%= neutral_icon("calendar", class: "me-1") %>
              Creato il <%= @reimboursement.created_at.strftime("%d/%m/%Y alle %H:%M") %>
            </small>
          </div>
          <div class="d-flex align-items-center">
            <div class="me-3">
              <%= status_badge(@reimboursement.status, :reimboursement) %>
            </div>
            
            <% if current_user.admin? %>
              <div class="btn-group">
                <% if @reimboursement.expenses.any? %>
                  <%= link_to 'Apri Approvazione Giustificativi', approve_expenses_reimboursement_path(@reimboursement), class: "btn btn-sm btn-warning" %>
                <% end %>
                <% if @reimboursement.can_be_approved? %>
                  <%= button_to 'Approva Rimborso', approve_reimboursement_reimboursement_path(@reimboursement), 
                              method: :patch, 
                              data: { confirm: 'Sei sicuro di voler approvare questo rimborso?' },
                              class: "btn btn-sm btn-success" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>
        
        <div class="card-body">
          <% if @reimboursement.status == 'created' %>
            <div class="alert alert-warning border-start border-warning border-4 mb-4">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <i class="fas fa-info-circle fa-2x text-warning"></i>
                </div>
                <div>
                  <h6 class="alert-heading mb-1">
                    <i class="fas fa-rocket me-2"></i>Rimborso creato con successo!
                  </h6>
                  <p class="mb-2">Il tuo rimborso è stato registrato nel sistema. Ecco cosa succederà ora:</p>
                  <ul class="mb-2 small">
                    <li><strong>Revisione:</strong> La segreteria controllerà i tuoi giustificativi</li>
                    <li><strong>Approvazione:</strong> Riceverai una notifica email per ogni aggiornamento</li>
                    <li><strong>Pagamento:</strong> Una volta approvato, il rimborso verrà elaborato</li>
                  </ul>
                  <small class="text-muted">
                    <i class="fas fa-envelope me-1"></i>Ti invieremo aggiornamenti via email per ogni cambio di stato
                  </small>
                </div>
              </div>
            </div>
          <% elsif @reimboursement.status == 'waiting' %>
            <div class="alert alert-info border-start border-info border-4 mb-4">
              <div class="d-flex align-items-center">
                <div class="me-3">
                  <i class="fas fa-clock fa-2x text-info"></i>
                </div>
                <div>
                  <h6 class="alert-heading mb-1">
                    <i class="fas fa-hourglass-half me-2"></i>Rimborso in Attesa
                  </h6>
                  <p class="mb-0">Il tuo rimborso richiede attenzione. Controlla le note per eventuali richieste di chiarimenti.</p>
                </div>
              </div>
            </div>
          <% end %>
          
          <div class="row">
            <!-- Informazioni generali -->
            <div class="col-md-6">
              <div class="card h-100">
                <div class="card-header bg-primary text-white">
                  <h5 class="mb-0">
                    <%= info_icon("info-circle", class: "me-2") %> Informazioni
                  </h5>
                </div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-12">
                      <div class="d-flex align-items-center">
                        <div class="avatar bg-light rounded-circle p-2 me-3">
                          <%= neutral_icon("user") %>
                        </div>
                        <div>
                          <small class="text-muted">Richiedente</small>
                          <div class="fw-bold">
                            <%= @reimboursement.user&.name %> <%= @reimboursement.user&.surname %>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-12">
                      <div class="d-flex align-items-center">
                        <div class="avatar bg-light rounded-circle p-2 me-3">
                          <%= neutral_icon("clock") %>
                        </div>
                        <div class="flex-grow-1">
                          <small class="text-muted">Stato attuale</small>
                          <div class="d-flex align-items-center">
                            <%= status_badge(@reimboursement.status, :reimboursement) %>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-12">
                      <div class="d-flex align-items-center">
                        <div class="avatar bg-light rounded-circle p-2 me-3">
                          <%= neutral_icon("calendar-plus") %>
                        </div>
                        <div>
                          <small class="text-muted">Data creazione</small>
                          <div class="fw-bold">
                            <%= @reimboursement.created_at.strftime("%d/%m/%Y") %>
                            <small class="text-muted">alle <%= @reimboursement.created_at.strftime("%H:%M") %></small>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-12">
                      <div class="d-flex align-items-center">
                        <div class="avatar bg-light rounded-circle p-2 me-3">
                          <%= neutral_icon("edit") %>
                        </div>
                        <div>
                          <small class="text-muted">Ultima modifica</small>
                          <div class="fw-bold">
                            <%= @reimboursement.updated_at.strftime("%d/%m/%Y") %>
                            <small class="text-muted">alle <%= @reimboursement.updated_at.strftime("%H:%M") %></small>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <div class="col-12">
                      <div class="d-flex align-items-center">
                        <div class="avatar bg-light rounded-circle p-2 me-3">
                          <%= success_icon("euro-sign") %>
                        </div>
                        <div>
                          <small class="text-muted">Importo totale</small>
                          <div class="fw-bold fs-5 text-success">
                            € <%= number_with_precision(@reimboursement.total_amount, precision: 2) %>
                          </div>
                          <% if @reimboursement.denied_amount > 0 %>
                            <small class="text-danger">
                              (€ <%= number_with_precision(@reimboursement.denied_amount, precision: 2) %> negate)
                            </small>
                          <% end %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            
            <!-- Metodo di pagamento -->
            <div class="col-md-6">
              <div class="card h-100">
                <div class="card-header bg-info text-white">
                  <h5 class="mb-0">
                    <%= info_icon("credit-card", class: "me-2") %> Metodo di Pagamento
                  </h5>
                </div>
                <div class="card-body">
                  <div class="row g-3">
                    <div class="col-12">
                      <div class="d-flex align-items-center">
                        <div class="avatar bg-light rounded-circle p-2 me-3">
                          <% if @reimboursement.bank_account.present? %>
                            <%= primary_icon("university") %>
                          <% else %>
                            <%= muted_icon("question") %>
                          <% end %>
                        </div>
                        <div>
                          <small class="text-muted">Tipo di pagamento</small>
                          <div class="fw-bold">
                            <%= @reimboursement.payment_method_type %>
                          </div>
                        </div>
                      </div>
                    </div>
                    
                    <% if @reimboursement.bank_account.present? %>
                      <div class="col-12">
                        <div class="d-flex align-items-center">
                          <div class="avatar bg-light rounded-circle p-2 me-3">
                            <%= primary_icon("hashtag") %>
                          </div>
                          <div>
                            <small class="text-muted">IBAN</small>
                            <div class="fw-bold font-monospace">
                              <%= @reimboursement.bank_account.iban %>
                            </div>
                          </div>
                        </div>
                      </div>
                      
                      <div class="col-12">
                        <div class="d-flex align-items-center">
                          <div class="avatar bg-light rounded-circle p-2 me-3">
                            <%= secondary_icon("user-tie") %>
                          </div>
                          <div>
                            <small class="text-muted">Intestatario</small>
                            <div class="fw-bold">
                              <%= @reimboursement.bank_account.owner %>
                            </div>
                          </div>
                        </div>
                      </div>
                    <% else %>
                      <div class="col-12">
                        <div class="alert alert-warning mb-0">
                          <i class="fas fa-exclamation-triangle me-2"></i>
                          Nessun metodo di pagamento configurato
                        </div>
                      </div>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          </div>
          
          <hr>
          
          <!-- Spese -->
          <div class="row">
            <div class="col-12">
              <h5>Spese (<%= pluralize(@reimboursement.expenses.count, 'spesa', 'spese') %>)</h5>
              
              <% if @reimboursement.expenses.any? %>
                <div class="table-responsive">
                  <table class="table table-striped">
                    <thead class="table-dark">
                      <tr>
                        <th>Data</th>
                        <th>Descrizione</th>
                        <th>Tipo</th>
                        <th>Status</th>
                        <th>Importo</th>
                        <th>Dettagli/Allegato</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% @reimboursement.expenses.each do |expense| %>
                        <tr class="<%= 'table-danger' if expense.status_denied? %>">
                          <td><%= expense.date&.strftime("%d/%m/%Y") %></td>
                          <td><%= expense.purpose %></td>
                          <td>
                            <span class="badge <%= file_badge_class(expense) %>">
                              <i class="<%= file_icon(expense) %> me-1"></i>
                              <%= file_type_text(expense) %>
                            </span>
                          </td>
                          <td>
                            <%= status_badge(expense.status, :expense) %>
                          </td>
                          <td class="text-end">
                            <% if expense.status_denied? %>
                              <div>
                                <del>€ <%= number_with_precision(expense.requested_amount, precision: 2) %></del>
                                <small class="text-muted d-block">
                                  <del>richiesto di € <%= number_with_precision(expense.amount, precision: 2) %></del>
                                </small>
                              </div>
                            <% else %>
                              <div>
                                <strong>€ <%= number_with_precision(expense.requested_amount, precision: 2) %></strong>
                                <% if expense.requested_amount != expense.amount %>
                                  <small class="text-muted d-block">
                                    di € <%= number_with_precision(expense.amount, precision: 2) %>
                                  </small>
                                <% end %>
                              </div>
                            <% end %>
                          </td>
                          <td>
                            <% if expense.car? %>
                              <!-- Dettagli spesa auto -->
                              <div class="small">
                                <% if expense.vehicle %>
                                  <strong>Veicolo:</strong> <%= expense.vehicle.display_name %><br>
                                <% end %>
                                <% if expense.departure && expense.arrival %>
                                  <strong>Percorso:</strong> <%= expense.departure %> → <%= expense.arrival %><br>
                                <% end %>
                                <% if expense.distance %>
                                  <strong>Distanza:</strong> <%= expense.distance %> km
                                  <% if expense.return_trip? %>
                                    (A/R)
                                  <% end %><br>
                                <% end %>
                                <% if expense.calculation_date %>
                                  <strong>Data calcolo:</strong> <%= expense.calculation_date.strftime("%d/%m/%Y") %>
                                <% end %>
                              </div>
                            <% else %>
                              <!-- Dettagli spesa normale -->
                              <div class="small">
                                <strong>Progetto:</strong> <%= expense.project %><br>
                                <!-- Allegato spesa normale -->
                                <% if expense.electronic_invoice? && expense.has_invoice_pdf? %>
                                  <!-- Fattura elettronica con PDF generato -->
                                  <div class="mt-2">
                                    <div class="d-flex align-items-center mb-2">
                                      <span class="badge bg-success me-2">
                                        <i class="fas fa-file-invoice me-1"></i>Fattura Elettronica
                                      </span>
                                    </div>
                                    <div class="btn-group" role="group">
                                      <%= link_to download_invoice_pdf_expense_path(expense), 
                                                  class: "btn btn-sm btn-primary", 
                                                  title: "Scarica PDF della fattura" do %>
                                        <i class="fas fa-download me-1"></i>PDF
                                      <% end %>
                                      <%= link_to expense.attachment, target: "_blank", 
                                                  class: "btn btn-sm btn-outline-secondary",
                                                  title: "Visualizza file XML originale" do %>
                                        <i class="fas fa-file-code me-1"></i>XML
                                      <% end %>
                                    </div>
                                  </div>
                                <% elsif expense.attachment.attached? %>
                                  <!-- Allegato normale -->
                                  <div class="mt-2">
                                    <%= link_to expense.attachment, target: "_blank", class: "btn btn-sm btn-outline-primary" do %>
                                      <i class="<%= file_icon(expense) %> me-1"></i>Visualizza
                                    <% end %>
                                  </div>
                                <% else %>
                                  <span class="text-muted">Nessun allegato</span>
                                <% end %>
                              </div>
                            <% end %>
                          </td>
                        </tr>
                      <% end %>
                    </tbody>
                    <tfoot class="table-light">
                      <tr>
                        <th colspan="5">Totale Netto</th>
                        <th class="text-end">€ <%= number_with_precision(@reimboursement.total_amount, precision: 2) %></th>
                      </tr>
                      <% if @reimboursement.denied_amount > 0 %>
                        <tr class="table-danger">
                          <th colspan="5">Spese Negate</th>
                          <th class="text-end">€ <%= number_with_precision(@reimboursement.denied_amount, precision: 2) %></th>
                        </tr>
                        <tr>
                          <th colspan="5">Totale Lordo</th>
                          <th class="text-end">€ <%= number_with_precision(@reimboursement.gross_total_amount, precision: 2) %></th>
                        </tr>
                      <% end %>
                    </tfoot>
                  </table>
                </div>
              <% else %>
                <div class="alert alert-info">
                  Nessuna spesa presente in questo rimborso.
                </div>
              <% end %>
            </div>
          </div>
          
          <hr>
          
          <!-- Note -->
          <div class="row">
            <div class="col-12">
              <h5>Note e comunicazioni</h5>
              
              <!-- Form per aggiungere nuova nota -->
              <div class="card mb-3">
                <div class="card-header">
                  <h6 class="mb-0">Aggiungi Nota</h6>
                </div>
                <div class="card-body">
                  <%= form_with model: [@reimboursement, Note.new], local: true, class: "mb-3" do |form| %>
                    <div class="mb-3">
                      <%= form.label :text, "Messaggio", class: "form-label" %>
                      <%= form.text_area :text, rows: 3, class: "form-control", required: true, placeholder: "Scrivi un messaggio..." %>
                    </div>
                    
                    <% if current_user.admin? %>
                      <div class="mb-3">
                        <%= form.label :status_change, "Cambia stato (opzionale)", class: "form-label" %>
                        <%= form.select :status_change, 
                                      options_for_select(
                                        [['Nessun cambio', '']] + 
                                        Reimboursement.status_translations.map { |key, value| [value, key] }
                                      ), 
                                      {}, 
                                      { class: "form-select" } %>
                        <small class="form-text text-muted">Se selezioni un nuovo stato, il rimborso verrà aggiornato automaticamente</small>
                      </div>
                    <% end %>
                    
                    <div class="d-flex justify-content-end">
                      <%= form.submit "Aggiungi Nota", class: "btn btn-primary" %>
                    </div>
                  <% end %>
                </div>
              </div>
              
              <!-- Lista delle note -->
              <% if @reimboursement.notes.any? %>
                <div class="notes-list">
                  <% @reimboursement.notes.recent.each do |note| %>
                    <div class="card mb-3">
                      <div class="card-header d-flex justify-content-between align-items-center">
                        <div>
                          <strong><%= note.user.name %> <%= note.user.surname %></strong>
                          <% if note.user.admin? %>
                            <span class="badge bg-danger ms-1">Admin</span>
                          <% end %>
                          <% if (note.created_at - @reimboursement.created_at) < 60 %>
                            <span class="badge bg-info ms-1">
                              <i class="fas fa-sticky-note me-1"></i>Nota Iniziale
                            </span>
                          <% end %>
                          <small class="text-muted ms-2"><%= note.created_at.strftime("%d/%m/%Y alle %H:%M") %></small>
                        </div>
                        <% if current_user.admin? %>
                          <%= button_to [@reimboursement, note], method: :delete, 
                                      confirm: "Sei sicuro di voler eliminare questa nota?", 
                                      class: "btn btn-sm btn-outline-danger" do %>
                            <i class="fas fa-trash"></i>
                          <% end %>
                        <% end %>
                      </div>
                      <div class="card-body">
                        <% if note.status_change.present? %>
                          <div class="alert alert-info mb-2">
                            <i class="fas fa-info-circle"></i> 
                            <strong>Stato cambiato in:</strong> <%= Reimboursement.status_translations[note.status_change] %>
                          </div>
                        <% end %>
                        <p class="mb-0"><%= simple_format(note.text) %></p>
                      </div>
                    </div>
                  <% end %>
                </div>
              <% else %>
                <div class="alert alert-info">
                  Nessuna nota presente per questo rimborso.
                </div>
              <% end %>
            </div>
          </div>
        </div>
        
        <div class="card-footer">
          <%= link_to download_pdf_reimboursement_path(@reimboursement), class: "btn btn-outline-danger me-2" do %>
            <i class="fas fa-file-pdf me-2"></i>Scarica PDF
          <% end %>
          <% if @reimboursement.can_be_edited_by?(current_user) %>
            <%= link_to 'Modifica', edit_reimboursement_path(@reimboursement), class: "btn btn-primary" %>
          <% end %>
          <%= link_to 'Indietro', reimboursements_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>
  </div>
</div>