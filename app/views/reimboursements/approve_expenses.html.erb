<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
          <h3 class="mb-0">Approvazione Giustificativi - Rimborso #<%= @reimboursement.id %></h3>
          <div>
            <span class="badge bg-info">
              Giustificativo <%= @current_expense_index + 1 %> di <%= @total_expenses %>
            </span>
            <%= link_to 'Torna al Rimborso', reimboursement_path(@reimboursement), class: "btn btn-sm btn-outline-secondary ms-2" %>
          </div>
        </div>
        
        <div class="card-body">          
          <div class="row">
            <!-- Form di modifica spesa -->
            <div class="col-md-6">
              <h5><i class="fas fa-edit me-2"></i>Modifica Spesa</h5>
              
              <%= form_with model: @reimboursement, local: true, html: { class: "expense-edit-form" } do |form| %>
                <%= form.fields_for :expenses, [@current_expense] do |expense_form| %>
                  <%= render 'expense_fields', f: expense_form %>
                <% end %>
                <div class="mt-3">
                  <%= form.submit "Salva Modifiche", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
            
            <!-- Allegato (destra) -->
            <div class="col-md-6">
              <% if @current_expense.car? %>
                <h5>Spesa Auto - Dettagli Calcolo</h5>
                
                <div class="card">
                  <div class="card-body">
                    <% if @current_expense.vehicle %>
                      <div class="row mb-2">
                        <div class="col-sm-4"><strong>Veicolo:</strong></div>
                        <div class="col-sm-8"><%= @current_expense.vehicle.display_name %></div>
                      </div>
                    <% end %>
                    
                    <% if @current_expense.departure && @current_expense.arrival %>
                      <div class="row mb-2">
                        <div class="col-sm-4"><strong>Percorso:</strong></div>
                        <div class="col-sm-8"><%= @current_expense.departure %> → <%= @current_expense.arrival %></div>
                      </div>
                    <% end %>
                    
                    <% if @current_expense.distance %>
                      <div class="row mb-2">
                        <div class="col-sm-4"><strong>Distanza:</strong></div>
                        <div class="col-sm-8">
                          <%= @current_expense.distance %> km
                          <% if @current_expense.return_trip? %>
                            <span class="badge bg-info ms-1">A/R</span>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                    
                    <hr>
                    <h6 class="text-primary">Costi per Km</h6>
                    
                    <% if @current_expense.quota_capitale %>
                      <div class="row mb-1">
                        <div class="col-sm-6">Quota capitale:</div>
                        <div class="col-sm-6">€ <%= number_with_precision(@current_expense.quota_capitale, precision: 2) %></div>
                      </div>
                    <% end %>
                    
                    <% if @current_expense.carburante %>
                      <div class="row mb-1">
                        <div class="col-sm-6">Carburante:</div>
                        <div class="col-sm-6">€ <%= number_with_precision(@current_expense.carburante, precision: 2) %></div>
                      </div>
                    <% end %>
                    
                    <% if @current_expense.pneumatici %>
                      <div class="row mb-1">
                        <div class="col-sm-6">Pneumatici:</div>
                        <div class="col-sm-6">€ <%= number_with_precision(@current_expense.pneumatici, precision: 2) %></div>
                      </div>
                    <% end %>
                    
                    <% if @current_expense.manutenzione %>
                      <div class="row mb-1">
                        <div class="col-sm-6">Manutenzione:</div>
                        <div class="col-sm-6">€ <%= number_with_precision(@current_expense.manutenzione, precision: 2) %></div>
                      </div>
                    <% end %>
                    
                    <hr>
                    <div class="row">
                      <div class="col-sm-6"><strong>Totale per Km:</strong></div>
                      <div class="col-sm-6">
                        <strong>€ <%= number_with_precision((@current_expense.quota_capitale || 0) + (@current_expense.carburante || 0) + (@current_expense.pneumatici || 0) + (@current_expense.manutenzione || 0), precision: 2) %></strong>
                      </div>
                    </div>
                    
                    <div class="mt-3 p-2 bg-light rounded">
                      <small class="text-muted">
                        <i class="fas fa-info-circle"></i>
                        Le spese auto sono calcolate automaticamente e non richiedono allegati.
                      </small>
                    </div>
                  </div>
                </div>
              <% else %>
                <h5>
                  <% if @current_expense.electronic_invoice? && @current_expense.has_invoice_pdf? %>
                    <i class="fas fa-file-invoice me-2"></i>Fattura Elettronica
                  <% else %>
                    Allegato
                  <% end %>
                </h5>
                
                <div class="card">
                  <div class="card-body text-center">
                    <% if @current_expense.attachment.attached? %>
                      <% if @current_expense.electronic_invoice? && @current_expense.has_invoice_pdf? %>
                        <!-- Mostra PDF della fattura elettronica generato -->
                        <div class="mb-3">
                          <span class="badge bg-success">
                            <i class="fas fa-check-circle me-1"></i>Fattura convertita in PDF
                          </span>
                        </div>
                        <div class="border rounded">
                          <iframe src="<%= url_for(@current_expense.pdf_attachment) %>" 
                                  width="100%" 
                                  height="600" 
                                  style="border: none;" 
                                  class="rounded">
                            Il tuo browser non supporta la visualizzazione di PDF.
                          </iframe>
                          <div class="p-2 bg-light border-top d-flex justify-content-between">
                            <div>
                              <%= link_to "Scarica PDF", download_invoice_pdf_expense_path(@current_expense), 
                                          class: "btn btn-sm btn-primary" %>
                              <%= link_to "File XML Originale", @current_expense.attachment, target: "_blank", 
                                          class: "btn btn-sm btn-outline-secondary ms-2" %>
                            </div>
                            <small class="text-muted align-self-center">
                              <i class="fas fa-info-circle"></i>
                              PDF generato automaticamente dalla fattura elettronica
                            </small>
                          </div>
                        </div>
                      <% elsif @current_expense.attachment.content_type.start_with?('image/') %>
                        <!-- Mostra immagine -->
                        <%= image_tag @current_expense.attachment, class: "img-fluid rounded", style: "max-height: 500px;" %>
                        <div class="mt-3">
                          <%= link_to "Visualizza a Schermo Intero", @current_expense.attachment, target: "_blank", class: "btn btn-outline-primary" %>
                        </div>
                      <% elsif @current_expense.attachment.content_type == 'application/pdf' %>
                        <!-- Mostra PDF -->
                        <div class="border rounded">
                          <iframe src="<%= url_for(@current_expense.attachment) %>" 
                                  width="100%" 
                                  height="600" 
                                  style="border: none;" 
                                  class="rounded">
                            Il tuo browser non supporta la visualizzazione di PDF.
                          </iframe>
                          <div class="p-2 bg-light border-top">
                            <%= link_to "Apri in Nuova Scheda", @current_expense.attachment, target: "_blank", class: "btn btn-sm btn-outline-primary" %>
                            <%= link_to "Scarica PDF", @current_expense.attachment, download: true, class: "btn btn-sm btn-outline-secondary ms-2" %>
                          </div>
                        </div>
                      <% else %>
                        <!-- Altro tipo di file -->
                        <div class="border rounded p-4 bg-light">
                          <i class="fas fa-file fa-5x text-secondary mb-3"></i>
                          <p>Allegato: <%= @current_expense.attachment.filename %></p>
                          <%= link_to "Scarica File", @current_expense.attachment, target: "_blank", class: "btn btn-outline-primary" %>
                        </div>
                      <% end %>
                    <% else %>
                      <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        Nessun allegato presente per questo giustificativo.
                      </div>
                    <% end %>
                  </div>
                </div>
              <% end %>
          </div>
        </div>
        
        <div class="card-footer">
          <div class="row">
            <div class="col-md-8">
              <!-- Azioni di approvazione -->
              <% if @current_expense.status == 'created' %>
                <%= form_with url: approve_expense_reimboursement_path(@reimboursement), method: :patch, local: true, class: "d-inline" do |form| %>
                  <%= form.hidden_field :expense_id, value: @current_expense.id %>
                  <%= form.hidden_field :next_index, value: @current_expense_index + 1 %>
                  <%= form.submit "Approva", class: "btn btn-success" %>
                <% end %>
                
                <!-- Bottone Rifiuta con modal -->
                <button type="button" class="btn btn-danger ms-2" data-bs-toggle="modal" data-bs-target="#denyModal">
                  Rifiuta
                </button>
              <% else %>
                <span class="text-muted">Giustificativo già revisionato</span>
              <% end %>
            </div>
            
            <div class="col-md-4 text-end">
              <!-- Navigazione -->
              <% if @current_expense_index + 1 < @total_expenses %>
                <%= link_to "Avanti", approve_expenses_reimboursement_path(@reimboursement, expense_index: @current_expense_index + 1), class: "btn btn-primary" %>
              <% else %>
                <%= link_to "Fine", reimboursement_path(@reimboursement), class: "btn btn-outline-secondary" %>
              <% end %>
              
              <% if @current_expense_index > 0 %>
                <%= link_to "Indietro", approve_expenses_reimboursement_path(@reimboursement, expense_index: @current_expense_index - 1), class: "btn btn-outline-secondary ms-1" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Modal per rifiuto -->
<div class="modal fade" id="denyModal" tabindex="-1" aria-labelledby="denyModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <%= form_with url: deny_expense_reimboursement_path(@reimboursement), method: :patch, local: true do |form| %>
        <div class="modal-header">
          <h5 class="modal-title" id="denyModalLabel">Rifiuta Giustificativo</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <%= form.hidden_field :expense_id, value: @current_expense.id %>
          <%= form.hidden_field :next_index, value: @current_expense_index + 1 %>
          
          <div class="mb-3">
            <%= form.label :note_content, "Motivo del rifiuto (opzionale)", class: "form-label" %>
            <%= form.text_area :note_content, rows: 3, class: "form-control", placeholder: "Spiega il motivo del rifiuto..." %>
          </div>
          
          <div class="mb-3">
            <%= form.label :reimboursement_status, "Cambia stato del rimborso", class: "form-label" %>
            <%= form.select :reimboursement_status, 
                          options_for_select([
                            ['Mantieni stato attuale', ''],
                            ['In Attesa', 'waiting'],
                            ['Rifiutato', 'denied']
                          ]), 
                          { selected: 'waiting' },
                          { class: "form-select" } %>
            <small class="form-text text-muted">Di default il rimborso viene messo "In Attesa"</small>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annulla</button>
          <%= form.submit "Rifiuta Giustificativo", class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
