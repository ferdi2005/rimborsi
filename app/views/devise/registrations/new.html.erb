<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Registrazione</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "row g-3" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="col-md-6">
              <%= f.label :name, "Nome", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true, minlength: 2, maxlength: 50 %>
            </div>

            <div class="col-md-6">
              <%= f.label :surname, "Cognome", class: "form-label" %>
              <%= f.text_field :surname, class: "form-control", required: true, minlength: 2, maxlength: 50 %>
            </div>

            <div class="col-md-6">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
              <small class="form-text text-muted">Inserisci un indirizzo email valido</small>
            </div>

            <div class="col-md-6">
              <%= f.label :username, "Username", class: "form-label" %>
              <%= f.text_field :username, class: "form-control", required: true, minlength: 3, maxlength: 30,
                              pattern: "[a-zA-Z0-9_]+", 
                              title: "Solo lettere, numeri e underscore" %>
              <small class="form-text text-muted">Solo lettere, numeri e underscore (3-30 caratteri)</small>
            </div>

            <div class="col-md-6">
              <%= f.label :telephone, "Telefono", class: "form-label" %>
              <%= f.text_field :telephone, class: "form-control", type: "tel",
                              pattern: "(\+39)?[0-9]{6,13}",
                              title: "Numero di telefono italiano senza spazi (es: 3331234567 o +393331234567)" %>
              <small class="form-text text-muted">Numero italiano senza spazi (opzionale): 3331234567 o +393331234567</small>
            </div>

            <div class="col-md-6">
              <!-- Il ruolo verrÃ  assegnato dall'amministratore -->
            </div>

            <div class="col-md-6">
              <%= f.label :password, "Password", class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted">(<%= @minimum_password_length %> caratteri minimo)</small>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", required: true %>
            </div>

            <div class="col-md-6">
              <%= f.label :password_confirmation, "Conferma Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", required: true %>
            </div>

            <div class="col-12">
              <%= f.submit "Registrati", class: "btn btn-primary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
