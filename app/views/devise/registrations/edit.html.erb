<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Modifica Profilo</h2>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "row g-3" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="col-md-6">
              <%= f.label :name, "Nome", class: "form-label" %>
              <%= f.text_field :name, class: "form-control", required: true, minlength: 2, maxlength: 50 %>
            </div>

            <div class="col-md-6">
              <%= f.label :surname, "Cognome", class: "form-label" %>
              <%= f.text_field :surname, class: "form-control", required: true, minlength: 2, maxlength: 50 %>
            </div>

            <div class="col-md-6">
              <%= f.label :email, "Email", class: "form-label" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", required: true %>
              <small class="form-text text-muted">Inserisci un indirizzo email valido</small>
            </div>

            <div class="col-md-6">
              <%= f.label :username, "Username", class: "form-label" %>
              <%= f.text_field :username, class: "form-control", required: true, minlength: 3, maxlength: 30,
                              pattern: "[a-zA-Z0-9_]+", 
                              title: "Solo lettere, numeri e underscore" %>
              <small class="form-text text-muted">Solo lettere, numeri e underscore (3-30 caratteri)</small>
            </div>

            <div class="col-md-6">
              <%= f.label :telephone, "Telefono", class: "form-label" %>
              <%= f.text_field :telephone, class: "form-control", type: "tel",
                              pattern: "(\+39)?[0-9]{6,13}",
                              title: "Numero di telefono italiano senza spazi (es: 3331234567 o +393331234567)" %>
              <small class="form-text text-muted">Numero italiano senza spazi (opzionale): 3331234567 o +393331234567</small>
            </div>

            <% if current_user.admin? %>
              <div class="col-md-6">
                <%= f.label :role_id, "Ruolo", class: "form-label" %>
                <%= f.collection_select :role_id, Role.all, :id, :label, { prompt: "Seleziona un ruolo" }, { class: "form-select" } %>
              </div>
            <% else %>
              <div class="col-md-6">
                <%= f.label :role_id, "Ruolo", class: "form-label" %>
                <p class="form-control-plaintext"><%= current_user.role&.label || "Nessun ruolo assegnato" %></p>
              </div>
            <% end %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <div class="col-12">
                <div class="alert alert-info">
                  In attesa di conferma per: <%= resource.unconfirmed_email %>
                </div>
              </div>
            <% end %>

            <div class="col-md-6">
              <%= f.label :password, "Password", class: "form-label" %>
              <small class="form-text text-muted">(lascia vuoto se non vuoi cambiarla)</small>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              <% if @minimum_password_length %>
                <small class="form-text text-muted"><%= @minimum_password_length %> caratteri minimo</small>
              <% end %>
            </div>

            <div class="col-md-6">
              <%= f.label :password_confirmation, "Conferma Password", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="col-12">
              <%= f.label :current_password, "Password Attuale", class: "form-label" %>
              <small class="form-text text-muted">(richiesta per confermare le modifiche)</small>
              <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control", required: true %>
            </div>

            <div class="col-12">
              <%= f.submit "Aggiorna", class: "btn btn-primary" %>
              <%= link_to "Indietro", :back, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
        <div class="card-footer text-center">
          <p class="text-muted mb-0">
            <i class="fas fa-info-circle"></i> 
            Per assistenza o problemi con l'account, contatta l'amministrazione.
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
