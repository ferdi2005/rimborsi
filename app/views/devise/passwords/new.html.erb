<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col-md-6 col-lg-4">
      <div class="card shadow">
        <div class="card-body p-4">
          <div class="text-center mb-4">
            <h2 class="h4 text-gray-900 mb-0">Password dimenticata?</h2>
            <p class="text-muted small mt-2">Inserisci il tuo indirizzo email per ricevere le istruzioni</p>
          </div>

          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "needs-validation", novalidate: true }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="mb-3">
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, 
                  autofocus: true, 
                  autocomplete: "email",
                  class: "form-control",
                  placeholder: "Inserisci la tua email",
                  required: true %>
              <div class="invalid-feedback">
                Inserisci un indirizzo email valido.
              </div>
            </div>

            <div class="d-grid">
              <%= f.submit "Invia istruzioni per il reset", 
                  class: "btn btn-primary btn-block" %>
            </div>
          <% end %>

          <hr class="my-4">

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
