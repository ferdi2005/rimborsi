<div class="container-fluid">
  <h1>Modifica Utente: <%= @user.name %> <%= @user.surname %></h1>
  
  <%= form_with(model: [:admin, @user], local: true, class: "row g-3") do |form| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="col-md-6">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :surname, class: "form-label" %>
      <%= form.text_field :surname, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :email, class: "form-label" %>
      <%= form.email_field :email, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :username, class: "form-label" %>
      <%= form.text_field :username, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :telephone, class: "form-label" %>
      <%= form.number_field :telephone, class: "form-control" %>
    </div>

    <div class="col-md-6">
      <%= form.label :role_id, "Ruolo", class: "form-label" %>
      <%= form.collection_select :role_id, Role.all, :id, :label, { prompt: "Seleziona un ruolo" }, { class: "form-select" } %>
    </div>

    <div class="col-md-6">
      <div class="form-check mt-4">
        <%= form.check_box :active, class: "form-check-input" %>
        <%= form.label :active, "Account Attivo", class: "form-check-label" %>
        <small class="form-text text-muted d-block">Deseleziona per disattivare l'accesso dell'utente</small>
      </div>
    </div>

    <div class="col-12">
      <%= form.submit "Aggiorna Utente", class: "btn btn-primary" %>
      <%= link_to "Annulla", admin_user_path(@user), class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>
