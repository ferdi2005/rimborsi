<div class="container-fluid">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Dettagli Utente</h1>
    <% if @user.active? %>
      <span class="badge bg-success fs-6">Attivo</span>
    <% else %>
      <span class="badge bg-danger fs-6">Disattivato</span>
    <% end %>
  </div>
  
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= @user.name %> <%= @user.surname %></h5>
      
      <div class="row">
        <div class="col-md-6">
          <p><strong>Email:</strong> <%= @user.email %></p>
          <p><strong>Username:</strong> <%= @user.username %></p>
          <p><strong>Telefono:</strong> <%= @user.telephone %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Ruolo:</strong> <%= @user.role&.label || "Nessun ruolo assegnato" %></p>
          <p><strong>Amministratore:</strong> 
            <% if @user.admin? %>
              <span class="badge bg-success">Sì</span>
            <% else %>
              <span class="badge bg-secondary">No</span>
            <% end %>
          </p>
          <p><strong>Registrato il:</strong> <%= @user.created_at.strftime("%d/%m/%Y") %></p>
          <p><strong>Stato account:</strong> 
            <% if @user.active? %>
              <span class="badge bg-success">Attivo</span>
            <% else %>
              <span class="badge bg-danger">Disattivato</span>
            <% end %>
          </p>
        </div>
      </div>
      
      <!-- Statistiche rimborsi -->
      <hr>
      <div class="row">
        <div class="col-md-12">
          <h6>Statistiche Rimborsi</h6>
          <p><strong>Totale rimborsi:</strong> 
            <span class="badge bg-<%= @user.reimboursements.any? ? 'warning' : 'secondary' %>">
              <%= @user.reimboursements.count %>
            </span>
          </p>
          <% if @user.reimboursements.any? %>
            <p><strong>Totale importo richiesto:</strong> 
              € <%= number_with_precision(@user.reimboursements.sum(&:total_amount), precision: 2) %>
            </p>
          <% end %>
        </div>
      </div>
      
      <div class="mt-3">
        <%= link_to 'Modifica', edit_admin_user_path(@user), class: 'btn btn-warning' %>
        
        <% unless @user == current_user %>
          <% if @user.active? %>
            <%= link_to 'Disattiva Account', deactivate_admin_user_path(@user), method: :patch,
                        data: { confirm: 'Sei sicuro di voler disattivare questo utente?' },
                        class: 'btn btn-outline-warning' %>
          <% else %>
            <%= link_to 'Attiva Account', activate_admin_user_path(@user), method: :patch,
                        class: 'btn btn-outline-success' %>
          <% end %>
          
          <% if @user.can_be_deleted? %>
            <%= link_to 'Elimina Utente', admin_user_path(@user), method: :delete,
                        data: { confirm: 'Sei sicuro? Questa azione non può essere annullata.' },
                        class: 'btn btn-outline-danger' %>
          <% else %>
            <span class="btn btn-secondary disabled" title="L'utente ha dei rimborsi associati">
              <i class="fas fa-ban"></i> Non eliminabile
            </span>
          <% end %>
        <% end %>
        
        <%= link_to 'Torna alla lista', admin_users_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
